{
  "compilerOptions": {
    "target": "ES2021",
    "module": "node16",
    "lib": ["ES2021", "DOM"],
    "outDir": "./esm",
    "moduleResolution": "node16",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
